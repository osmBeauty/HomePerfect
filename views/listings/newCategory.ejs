<% layout('layout/boilerPlate') %>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-5 all-form">
                <form method="POST" action="/categories">
                    <h2 class="text-center">Add New Category</h2>
                    <div class="mb-3">
                        <label for="exampleInputTitle1" class="form-label">Category Name</label>
                        <input type="text" name="category[name]" placeholder="Enter Category" class="form-control" id="exampleInputTitle1" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputicon1" class="form-label">Icon</label>
                        <input type="text" name="category[icon]" placeholder="Enter Category Icon" class="form-control" id="exampleInputicon1" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">ADD</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>