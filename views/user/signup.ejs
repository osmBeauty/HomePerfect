<% layout("layout/boilerPlate") %>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-5 all-form">
                <h3 class="text-center">SignUp</h3>
                <form method="POST" action="/signUp" class="needs-validation" novalidate>
                    <div>
                        <label for="Name" class="form-label">Name</label>
                        <input name="Name" placeholder="Enter Your Name" type="text" class="form-control" id="Name">
                    </div>
                    <br>
                    <div>
                        <label for="username" class="form-label">Username</label>
                        <input name="username" placeholder="Enter Your Username" type="text" class="form-control" id="username">
                    </div>
                    <br>
                    <div>
                        <label for="email" class="form-label">Email</label>
                        <input name="email" placeholder="Enter Your Email" type="text" class="form-control" id="email">
                    </div>
                    <br>
                    <div>
                        <label for="password" class="form-label">Password</label>
                        <input name="password" placeholder="Enter Your Password" class="form-control" id="password" required>
                    </div>
                    <br>
                    <div class="d-grid">
                        <button class="btn btn-dark" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>